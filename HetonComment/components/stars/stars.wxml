<view class="rate-group">
  <image  style="width:{{starsize}}rpx;height:{{starsize}}rpx;"   wx:for="{{lights}}" wx:key="id" src="/images/star/rate_light.png"></image>
  <image style="width:{{starsize}}rpx;height:{{starsize}}rpx;" wx:for="{{halfs}}" wx:key="id" src="/images/star/rate_half.png"></image>
  <image  style="width:{{starsize}}rpx;height:{{starsize}}rpx;"  wx:for="{{grays}}" wx:key="id" src="/images/star/rate_gray.png"></image>
  <text wx:if="{{istext}}" style="font-size:{{fontsize}}rpx;color:{{fontcolor}}">{{ratetext}}</text>
</view>