.searchbar{
  background-color: #fecc11;
  padding: 20rpx;
}

.searchbar .search-nav{
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.searchbar .search-nav .search-nav-icon{
  
  width: 100%;
  display: flex;
  justify-content:center;
}
.searchbar .search-nav .search-nav-icon .icon-title{
  color: #dfdfdf;
  font-size: 30rpx;
}
.searchbar .search-nav .search-nav-icon .icon-img{
  margin-top: 5rpx;
  width: 30rpx;
  height: 30rpx;
  
}

.search-input-group{
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.search-input{
  min-height: 40rpx;
  height: 40rpx;
  font-size: 14px;
}
