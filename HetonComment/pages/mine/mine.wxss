.bg {
  height: 450rpx;
  background-color: #333337;
}

.item {
  display: flex;
  flex-direction: row;
}

.title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  font-size: 36rpx;
}

.detail2 {
  font-size: 36rpx;
  position: absolute;
  right: 50rpx;
  height: 50rpx;
  line-height: 85rpx;
  color: #888;
}

.line {
  border: 1rpx solid #ccc;
  opacity: 0.2;
}

.head {
  display: flex;
  flex-direction: column;
}

.headIcon {
  display: flex;
  justify-content: center;
}

.login {
  display: flex;
  color: #fff;
  font-size: 15rpx;
  margin-top: 15rpx;
  justify-content: center;
}

.button {
  margin: 10rpx;
  font-size: 14rpx;
}

.head image {
  border-radius: 50%;
}

.hr {
  width: 100%;
  height: 15rpx;
  background-color: #f4f5f6;
}
